@model IEnumerable<Bimbelsharp.Area.CourseArea.ViewModel.CourseViewModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewData["Title"] = "Daftar Kursus";
}

<div class="container mt-4">
    <h2 class="text-center text-primary mb-4">Daftar Kursus</h2>

    <div class="d-flex justify-content-between mb-3">
        <a href="/course/create" class="btn btn-success">
            <i class="fas fa-plus"></i> Tambah Kursus
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>No</th>
                    <th>Nama Kursus</th>
                    <th>Tipe</th>
                    <th>Aksi</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    int i = 1;
                    @foreach (var course in Model)
                    {
                        <tr>
                            <td>@i</td>
                            <td>@course.CourseName</td>
                            <td>@course.Type</td>
                            <td>
                                <a href="/course/edit/@course.Id" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <a href="/course/delete/@course.Id" class="btn btn-danger btn-sm" onclick="return confirm('Apakah Anda yakin ingin menghapus kursus ini?');">
                                    <i class="fas fa-trash"></i> Hapus
                                </a>
                            </td>
                        </tr>
                        i++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center text-muted">Belum ada kursus yang tersedia.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
