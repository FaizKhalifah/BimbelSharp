@model IEnumerable<Bimbelsharp.Area.CourseArea.ViewModel.CourseViewModel>

<h1>Daftar Kursus</h1>

<table border="1">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nama Kursus</th>
            <th>Jenis</th>
            <th>Guru</th>
            <th>Siswa</th>
            <th>Tanggal Dibuat</th>
            <th>Tanggal Diperbarui</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.Id</td>
                <td>@course.CourseName</td>
                <td>@course.Type</td>
                <td>@string.Join(", ", course.TeacherNames)</td>
                <td>@string.Join(", ", course.StudentNames)</td>
                <td>@course.CreatedDate.ToString("dd-MM-yyyy")</td>
                <td>@course.UpdatedDate?.ToString("dd-MM-yyyy")</td>
            </tr>
        }
    </tbody>
</table>
